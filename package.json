    "supertest": "^6.1.6",
    "ts-jest": "^27.0.5",
    "ts-node-dev": "^1.1.8"
  },
  "scripts": {
    "test:unit": "jest \"[a-zA-Z0-9_]+.unit.test.[a-zA-Z0-9_]+\" --passWithNoTests",
